<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="18" >

    <!-- "Baton" -->

    <LinearLayout
        android:id="@+id/login_batonTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.00"
            android:src="@drawable/join_baton_text" />
    </LinearLayout>

    <!-- Baton Logo -->

    <LinearLayout
        android:id="@+id/login_batonLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/reg_register" />
    </LinearLayout>

    <!-- name -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="7" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/register_txtFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5" 
            android:layout_marginTop="10dp"
            android:hint="First Name"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans"/>

        <EditText
            android:id="@+id/register_txtLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5" 
            android:layout_marginTop="10dp"
            android:hint="Last Name"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans"/>
    </LinearLayout>

    <!-- Login ID -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="7" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="4" />

        <EditText
            android:id="@+id/register_txtLoginID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:hint="Unique ID"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans" />
    </LinearLayout>

    <!-- Login email -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="7" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="4" />

        <EditText
            android:id="@+id/register_txtEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:hint="Email for login"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans" />
    </LinearLayout>

    <!-- password -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="7" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="4" />

        <EditText
            android:id="@+id/register_txtPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:hint="Password"
            android:textSize="14dp"
            android:textStyle="italic"
            android:typeface="sans" />
    </LinearLayout>

    <!-- Button Join! -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/register_btnRegister"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="30dip"
            android:layout_weight="2"
            android:background="@drawable/reg_submit" />
    </LinearLayout>

    <!-- Button Register! -->

    

</LinearLayout>